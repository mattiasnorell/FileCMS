@model FileCms.Models.PageBaseModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Layout.Title</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Droid+Sans:400,700" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        @if (Model.Layout.HeaderImage != null)
        {
            <div id="header-background">
                <img src="@Model.Layout.HeaderImage"/> 
            </div>
        }

        <p class="headline"><a href="/">Code and rants</a></p>
        <h3>A wannabe designer who fell in love with writing code</h3>
        <a class="btn btn-primary" href="http://www.twitter.com/mrnorell/" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
        <a class="btn btn-primary" href="http://www.instagram.com/mrnorell/" target="_blank"><i class="fa fa-instagram fa-2x"></i></a>
        <a class="btn btn-primary" href="http://www.github.com/mattiasnorell/" target="_blank"><i class="fa fa-github fa-2x"></i></a>
    </header>

    <div class="container">
        <section>
            @RenderBody()
        </section>
    </div>

    <footer>
        <a><i class="fa fa-arrow-circle-up fa-3x"></i></a>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
