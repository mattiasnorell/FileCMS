@model FileCms.Models.PageBaseModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Layout.Title</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Droid+Sans:400,700" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/css")

    @if (Model.Layout.CustomCss != null)
    {
        foreach (var style in Model.Layout.CustomCss)
        {
        <link href="@style.Path" type="@style.Type" rel="stylesheet">
        }
    }

</head>
<body>
    <header>
        @if (Model.Layout.HeaderImage != null)
        {
            <div id="header-background">
                <img src="@Model.Layout.HeaderImage"/>
            </div>
        }

        <p class="headline"><a href="/">Code and rants</a></p>
        <h3>A wannabe designer who fell in love with writing code</h3>
        <a class="btn btn-primary" href="http://www.twitter.com/mrnorell/" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
        <a class="btn btn-primary" href="http://www.instagram.com/mrnorell/" target="_blank"><i class="fa fa-instagram fa-2x"></i></a>
        <a class="btn btn-primary" href="http://www.github.com/mattiasnorell/" target="_blank"><i class="fa fa-github fa-2x"></i></a>
        <a class="btn btn-primary" href="http://www.ello.co/norell/" target="_blank"><i class="icons ello"></i></a>

        <div class="row" style="padding-top: 20px;">

            <select onchange="window.location = this.value;">
                <option value="/">&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;</option>
                @if (Model.Layout.MenuItems != null)
                {
                    foreach (var menuItem in Model.Layout.MenuItems)
                    {
                        if (menuItem.Active)
                        {
                    <option selected value="@menuItem.Url">@menuItem.Text</option>
                        }
                        else
                        {
                    <option value="@menuItem.Url">@menuItem.Text</option>
                        }
                    }
                }
            </select>
        </div>
    </header>

    <div class="container">
        <section>
            @RenderBody()
        </section>
    </div>

    <footer>
        <a><i class="fa fa-arrow-circle-up fa-3x"></i></a>
    </footer>

    @RenderSection("scripts", required: false)

    @if (Model.Layout.CustomScripts != null)
    {
        foreach (var script in Model.Layout.CustomScripts)
        {
        <script type="@script.Type" src="@script.Path"></script>
        }
    }
</body>
</html>
